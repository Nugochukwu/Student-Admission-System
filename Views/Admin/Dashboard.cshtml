@model IEnumerable<Student_Admission_System.Models.Student>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<form method="get" asp-action="Dashboard" class="row g-2">
    <div class="col-md-4">
        <input type="text" name="search" value="@Context.Request.Query["search"]" 
               placeholder="Search by name or application #" class="form-control" />
    </div>
    <div class="col-md-3">
        <select name="statusId" class="form-control">
            <option value="">All Statuses</option>
            @foreach (var s in ViewBag.Statuses)
            {
                    <option value="@s.AdmissionStatusID"
                        selected="@(Context.Request.Query["statusId"] == s.AdmissionStatusID.ToString())">
                    @s.Name
                    </option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
    <div class="col-md-2">
        <ul class="nav-item">
        <a class="btn btn-success text-white" asp-area="" asp-controller="Admin" asp-action="AuditLogs">Logs</a>
        </ul>
    </div>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Application #</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Updated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
                <tr>
                    <td>@student.ApplicationNumber</td>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.AdmissionStatus?.Name</td>
                    <td>@student.LastUpdated.ToString("g")</td>
                    <td>
                    <form asp-action="UpdateStatus" asp-route-id="@student.StudentID" asp-route-status="Accepted" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form asp-action="UpdateStatus" asp-route-id="@student.StudentID" asp-route-status="Rejected" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

@model IEnumerable<Student_Admission_System.Models.Student>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard - Students</h2>

<form method="get" asp-action="Index">
    <label for="status">Filter by Status:</label>
    <select name="status" class="form-control" style="max-width:200px;">
        <option value="">All</option>
        <option value="PENDING">Pending</option>
        <option value="ACCEPTED">Accepted</option>
        <option value="REJECTED">Rejected</option>
    </select>
    <button type="submit" class="btn btn-primary mt-2">Filter</button>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Application #</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Registered</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.ApplicationNumber</td>
                <td>@s.FirstName @s.LastName</td>
                <td>@s.Email</td>
                <td>
                    <span class="badge 
                    @(s.AdmissionStatus?.Name == "ACCEPTED" ? "bg-success" : 
                      s.AdmissionStatus?.Name == "REJECTED" ? "bg-danger" : "bg-secondary")">
                        @s.AdmissionStatus?.Name
                    </span>
                </td>
                <td>@s.RegistrationDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@s.StudentID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@s.StudentID" class="btn btn-sm btn-info">Details</a>
                    <a asp-controller="Students" asp-action="Delete" asp-route-id="@s.StudentID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

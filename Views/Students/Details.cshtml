@model Student_Admission_System.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">High School Score</dt>
        <dd class="col-sm-10">@Model.HighSchoolScore</dd>

        <dt class="col-sm-2">Admission Status</dt>
        <dd class="col-sm-10">@Model.AdmissionStatus?.Name</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.StudentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
